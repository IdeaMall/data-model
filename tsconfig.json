{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "declaration": true,
        "importHelpers": true,
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        "outDir": "dist"
    },
    "include": ["src/**/*"],
    "typedocOptions": {
        "name": "IdeaMall data model",
        "excludeExternals": true,
        "excludePrivate": true,
        "readme": "./ReadMe.md",
        "plugin": ["typedoc-plugin-mdn-links"]
    }
}
